pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
                sh 'mvn verify'
            }
        }
        
        stage('Coverage') {
            steps {
                sh 'mvn jacoco:report'
            }
        }
    }
}
