{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLM Provider Configuration",
  "description": "Schema for LLM service provider configuration",
  "type": "object",
  "properties": {
    "provider_name": {
      "type": "string",
      "description": "LLM provider identifier",
      "enum": ["gemini"]
    },
    "cli_command": {
      "type": "array",
      "description": "Base CLI command and arguments",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "model_name": {
      "type": "string",
      "description": "Specific model identifier",
      "examples": ["gemini-2.5-pro", "gemini-1.5-pro"]
    },
    "timeout_seconds": {
      "type": "integer",
      "description": "API call timeout",
      "minimum": 10,
      "maximum": 300,
      "default": 30
    },
    "max_tokens": {
      "type": "integer",
      "description": "Maximum response length",
      "minimum": 100,
      "maximum": 100000,
      "default": 4000
    },
    "environment_variables": {
      "type": "object",
      "description": "Required environment variables",
      "patternProperties": {
        "^[A-Z_]+$": {
          "type": "string",
          "description": "Environment variable value or placeholder"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["provider_name", "cli_command", "model_name"],
  "additionalProperties": false
}